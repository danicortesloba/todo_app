<%= form_with model: @todo, local: true do |f| %>
  <p><%= f.label :description, "Detalle del To Do" %></p>
  <p><%= f.text_area :description %></p>

  <p><%= f.label :completed, "Tarea Terminada" %></p>
  <p><%= f.check_box(:completed) %></p>
  <%= f.submit "Enviar", class: 'btn btn-info'  %>
<% end %>
